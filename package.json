{
  "name": "cr-bot-sjr",
  "version": "1.0.0",
  "private": true,
  "description": "Simple AI Code review bot",
  "author": "scottjrainey",
  "license": "MIT",
  "homepage": "https://github.com//",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "main": "lib/server.js",
  "scripts": {
    "build": "tsc",
    "check": "biome check ./src",
    "format": "biome format ./src",
    "lint": "biome lint ./src",
    "start": "node lib/server.js",
    "dev": "nodemon --watch lib lib/server.js",
    "dev:probot": "probot run ./lib/index.js",
    "dev:watch": "tsc -w",
    "docker:build": "docker build -t cr-bot-sjr .",
    "docker:run": "docker run -p 8080:8080 --env-file .env cr-bot-sjr",
    "test": "vitest",
    "test:webhook": "node scripts/test-webhook.js",
    "prepare": "npm run build",
    "prestart": "npm run build",
    "smee": "smee-client --url $WEBHOOK_PROXY_URL --target http://localhost:8080"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.5.1",
    "@langchain/core": "^0.3.43",
    "@langchain/openai": "^0.4.9",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "langchain": "^0.3.19",
    "node-fetch": "^3.3.2",
    "openai": "^4.91.1",
    "picomatch": "^4.0.2",
    "probot": "^13.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/express": "^5.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/picomatch": "^3.0.2",
    "nock": "^14.0.0-beta.5",
    "nodemon": "^3.1.0",
    "smee-client": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">= 18"
  },
  "type": "module"
}